# =========================
# DISCORD
# =========================
# Discord bot token (REQUIRED)
DISCORD_BOT_TOKEN=

# =========================
# DASHBOARD
# =========================
# FastAPI dashboard port
DASHBOARD_PORT=8000

# Admin token (future use: auth / RBAC)
DASHBOARD_ADMIN_TOKEN=changeme

# =========================
# LOCAL AI â€” OLLAMA (PRIMARY ENGINE)
# =========================
# Ollama HTTP server URL
# If Ollama runs on the same PC:
#   http://localhost:11434
# If Ollama runs on another machine:
#   http://<LAN_IP>:11434
OLLAMA_HOST=http://localhost:11434

# Ollama model name (ANY installed model works)
# Examples:
#   llama3
#   llama3:8b
#   llama3:70b
#   mistral
#   qwen2.5
#   codellama:13b
OLLAMA_MODEL=llama3:8b

# =========================
# CLOUD AI (FALLBACK / OPTIONAL)
# =========================

# ---- OpenAI ----
ENABLE_OPENAI=true
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ---- Gemini ----
ENABLE_GEMINI=true
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# =========================
# MEMORY
# =========================
# SQLite database path
MEMORY_DB_PATH=./data/memory.db

# =========================
# SECURITY
# =========================
# Used for encrypted memory / secrets
# CHANGE THIS IN PRODUCTION
ENCRYPTION_KEY=change_this_in_production
